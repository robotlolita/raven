// -- Editor -----------------------------------------------------------
.editor {
    height: 100%
    overflow-y: scroll
    padding: 40px 20px 30px 20px
    font-family: serif-font


    header, .article-wrapper, article {
        actionable: true
    }
    header, .article-wrapper {
        max-width: 70%
        min-width: 500px
        margin: 0 auto
    }
    header {
        font-size: 2.5em
        font-weight: 800
        margin-bottom: 1em
        font-family: header-font
        color: #777
    }
    article {
        min-height: 100%
        color: control-colour
        -webkit-text-fill-color: text-colour
    }
    .article-wrapper {
        padding-bottom: 50px
        line-height: 1.4em
        font-size: 1.4em
        position: relative
        height: 100%
    }
    blockquote {
        border-left: 4px solid deepskyblue
        margin-left: -19px
        padding-left: 15px
        margin-right: 0px
        margin-bottom: 1.5em
    }
    p {
        margin: 0.5em 0 1.5em 0
    }
    h2 {
        font-size: 2em
        font-weight: 800
        margin: 1.5em 0 0.8em 0
        font-family: header-font
        -webkit-text-fill-color: #999
    }
    
    a {
	      text-decoration: none;
	      color: deepskyblue;
    }
    
    a:hover {
	      text-decoration: underline;
    }
    hr {
        border: none
        margin: 2em auto
        width: 30%
        text-align: center
        -webkit-text-fill-color: #e3e6e9
        position: relative

        &:before {
            font-family: Typicons
            content: "\e0b1  \e0b1  \e0b1"
            background: #f3f3f3
            display: inline-block;
            padding: 0 0.8em;
        }
        &:after {
            position: absolute
            width: 100%
            height: 1px
            background: #e3e6e9
            content: ""
            left: 0px
            top: 50%
            z-index: -1
        }
    }

}

