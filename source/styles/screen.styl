.text-field {
    position: relative

    input {
        background: transparent
        box-shadow: none
        border: none
        border-bottom: 2px solid control-colour
        font-size: 20px
        color: #aaa
        display: block
        width: 100%
        height: 48px
        line-height: 48px
        padding: 0 10px
        letter-spacing: 1px

        &:focus {
            outline: none
            color: control-focus-colour
            border-color: control-focus-colour
        }
        &::-webkit-input-placeholder {
            color: #ccc
        }
    }
    &:before, &:after {
        content: ""
        display: block
        width: 2px
        height: 8px
        position: absolute
        bottom: 0px
        background: control-colour
    }
    &:before {
        left: 0px
    }
    &:after {
        right: 0px
    }
}

.file-field {
    actionable: true

    .base-field-group {
        position: relative
        height: 48px
        line-height: 48px

        &:before {
            @extend .text-field:before
        }
        &:after {
            @extend .text-field:after
        }
    }
    
    input {
        @extend .text-field input
        font-size: 16px;
        font-weight: 300;
        padding: 5px 20px;
        cursor: pointer

        &:hover {
            @extend .text-field input:focus
        }
    }
    .input-action-button {
        button: control-focus-colour control-focus-colour;
        position: absolute;
        margin: 0px;
        padding: 0 20px;
        right: 0px;
        top: 0px;
        z-index: 3;
    }
    &.hovered {
        input {
            @extend .file-field input:hover
        }
        .base-field-group:before, .base-field-group:after {
            background-color: control-focus-colour
        }
        .input-action-button {
            @extend .file-field .input-action-button:hover
        }
    }
}

